<UserControl x:Class="D2Oracle.Avalonia.Views.Dashboard.RoshanNextItemsDropView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:D2Oracle.Avalonia.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dashboard="clr-namespace:D2Oracle.Core.ViewModels.Dashboard;assembly=D2Oracle.Core"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="dashboard:RoshanNextItemsDropViewModel"
             mc:Ignorable="d">
    <Design.DataContext>
        <dashboard:RoshanNextItemsDropViewModel />
    </Design.DataContext>
    <ItemsControl ItemsSource="{Binding ItemsImages}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <controls:ResourceImage Width="88"
                                        Height="64"
                                        ResourceName="{Binding}" />
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
