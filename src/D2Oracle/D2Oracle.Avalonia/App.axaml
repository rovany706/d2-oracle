<Application x:Class="D2Oracle.Avalonia.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="clr-namespace:D2Oracle.Avalonia.Common"
             xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:sukiUi="clr-namespace:SukiUI;assembly=SukiUI"
             RequestedThemeVariant="Default">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.DataTemplates>
        <common:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <sukiUi:SukiTheme ThemeColor="Red" />
        <icons:MaterialIconStyles />
    </Application.Styles>

    <Application.Resources>
        <FontFamily x:Key="ReaverFont">avares://D2Oracle/Assets/fonts#Reaver</FontFamily>
    </Application.Resources>
</Application>