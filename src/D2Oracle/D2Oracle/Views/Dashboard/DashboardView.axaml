<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:D2Oracle.Views"
             xmlns:d2Oracle="clr-namespace:D2Oracle"
             xmlns:dashboard="clr-namespace:D2Oracle.ViewModels.Dashboard"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="D2Oracle.Views.Dashboard.DashboardView"
             x:DataType="dashboard:DashboardPageViewModel"
             DataContext="{d2Oracle:DISource Type=dashboard:DashboardPageViewModel}">
    <Design.DataContext>
        <dashboard:DashboardPageViewModel />
    </Design.DataContext>
    
    <Grid>
        <ContentControl Content="{Binding CurrentStateInfoViewModel}"
                        IsVisible="{Binding IsConnected}" />

        <views:NotConnectedView IsVisible="{Binding !IsConnected}" />
    </Grid>
</UserControl>